---
// Layout
import Layout from '../layouts/main.astro';

// Sections
import CoverImageSection from '../components/CoverImageSection.astro';
import NavBar from '../components/NavBar.astro';
import AboutSection from '../components/AboutSection.astro';
import SongsSection from '../components/SongsSection.astro';
import VideosSection from '../components/VideosSection.astro';
import SocialLinksSection from '../components/SocialLinksSection.astro';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<Layout content={{ title: 'AGUIRRE' }}>
	<CoverImageSection />
	<NavBar />
	<SongsSection />
	<AboutSection />
	<VideosSection />
	<SocialLinksSection />
</Layout>

<style is:global>
@font-face {
	font-family: BuiltTitling;
	font-weight: 200;
	src: url('/fonts/built_titling/built titling el.otf') format('opentype');
}

@font-face {
	font-family: BuiltTitling;
	font-weight: 300;
	src: url('/fonts/built_titling/built titling lt.otf') format('opentype');
}

@font-face {
	font-family: BuiltTitling;
	font-weight: 400;
	src: url('/fonts/built_titling/built_titling_rg.otf') format('opentype');
}

@font-face {
	font-family: BuiltTitling;
	font-weight: 600;
	src: url('/fonts/built_titling/built titling sb.otf') format('opentype');
}

@font-face {
	font-family: BuiltTitling;
	font-weight: 700;
	src: url('/fonts/built_titling/built titling bd.otf') format('opentype');
}

@font-face {
	font-family: Superior;
	font-weight: 100;
	src: url('/fonts/lt_superior/LTSuperior-Thin.otf') format('opentype');
}

@font-face {
	font-family: Superior;
	font-weight: 200;
	src: url('/fonts/lt_superior/LTSuperior-ExtraLight.otf') format('opentype');
}

@font-face {
	font-family: Superior;
	font-weight: 300;
	src: url('/fonts/lt_superior/LTSuperior-Light.otf') format('opentype');
}

@font-face {
	font-family: Superior;
	font-weight: 400;
	src: url('/fonts/lt_superior/LTSuperior-Regular.otf') format('opentype');
}

@font-face {
	font-family: Superior;
	font-weight: 500;
	src: url('/fonts/lt_superior/LTSuperior-Medium.otf') format('opentype');
}

@font-face {
	font-family: Superior;
	font-weight: 600;
	src: url('/fonts/lt_superior/LTSuperior-SemiBold.otf') format('opentype');
}

@font-face {
	font-family: Superior;
	font-weight: 700;
	src: url('/fonts/lt_superior/LTSuperior-Bold.otf') format('opentype');
}

@font-face {
	font-family: Superior;
	font-weight: 800;
	src: url('/fonts/lt_superior/LTSuperior-ExtraBold.otf') format('opentype');
}

@font-face {
	font-family: Superior;
	font-weight: 900;
	src: url('/fonts/lt_superior/LTSuperior-Black.otf') format('opentype');
}

h1 {
	font-family: BuiltTitling;
	position: relative;
	@apply text-red-600 font-bold text-4xl text-center z-10;
	@apply lg:text-7xl;
}

h1::before {
	content: '';
	width: 120%;
	border: 1px lightgray solid;
	position: absolute;
	height: 10px;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	background-color: lightgray;
	z-index: -1;
}

h2 {
	font-family: BuiltTitling;
	@apply text-gray-700 font-medium text-4xl text-center;
	@apply lg:text-6xl;
}

h3 {
	font-family: BuiltTitling;
	@apply text-red-600 font-medium text-xl text-center;
	@apply lg:text-5xl;
}

p {
	font-family: Superior;
}

nav a {
	font-family: BuiltTitling;
	@apply p-4 text-xl text-white;
	@apply lg:text-3xl lg:mx-4 lg:h-full;
}

nav a:hover {
	@apply bg-red-700;
}
</style>

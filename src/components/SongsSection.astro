---
import Countdown from '../components/Countdown.astro';
---

<section id="songs" class="flex flex-col w-screen items-center space-y-4 lg:space-y-10">
	<h1>Nuevas canciones</h1>
	<div class="flex flex-col lg:flex-row w-full px-4 lg:m-0 lg:w-2/3 justify-around space-y-4 lg:space-y-0 lg:space-x-8">
		<div class="lg:w-1/2 h-[152px] lg:h-[352px]">
			<div id="embed-iframe"></div>
		</div>
		<!-- <iframe
			class="lg:w-1/2 h-[152px] lg:h-[352px]"
			style="border-radius:12px"
			src="https://open.spotify.com/embed/album/2BKfuZRUh7kHymIT9zJuLO?utm_source=generator"
			allowfullscreen=""
			allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
			loading="lazy"
		></iframe> -->
		<Countdown />
	</div>
</section>

<script is:inline src="https://open.spotify.com/embed/iframe-api/v1" async></script>
<script>
(window as unknown as any).onSpotifyIframeApiReady = (IFrameAPI: any) => {
	const element = document.getElementById('embed-iframe');
	const options = {
		uri: 'spotify:album:2BKfuZRUh7kHymIT9zJuLO',
		width: '100%',
		height: '100%',
	};
	const callback = (_: any) => {};
	IFrameAPI.createController(element, options, callback);
};
</script>
